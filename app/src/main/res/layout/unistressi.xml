<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="monospace"
            app:fontFamily="monospace"
            android:inputType="date" />


        <TextView
            android:id="@+id/editTextUni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginLeft="200dp"
            android:text="Unen laatu"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="monospace"
            app:fontFamily="monospace" />

        <RadioGroup
            android:id="@+id/radioGroupUni"
            android:layout_width="295dp"
            android:layout_height="150dp">

            <RadioButton
                android:id="@+id/RbtnErinUni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkButton"
                android:text="Erinomainen"
                android:textColor="#4CAF50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <RadioButton
                android:id="@+id/RbtnHyvaUni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkButton"
                android:text="Hyv채"
                android:textColor="#CDDC39"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <RadioButton
                android:id="@+id/RbtnHuonoUni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkButton"
                android:text="Huono"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace" />


        </RadioGroup>

        <TextView
            android:id="@+id/editTextStressi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Stressin m채채r채"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="monospace"
            app:fontFamily="monospace" />

        <RadioGroup
            android:id="@+id/radioGroupStressi"
            android:layout_width="295dp"
            android:layout_height="150dp">

            <RadioButton
                android:id="@+id/RbtnErinStressi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkButton"
                android:text="Ei ollenkaan"
                android:textColor="#4CAF50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <RadioButton
                android:id="@+id/RbtnHyvaStressi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkButton"
                android:text="Sopiva"
                android:textColor="#CDDC39"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <RadioButton
                android:id="@+id/RbtnHuonoStressi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkButton"
                android:text="Liikaa"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace" />

        </RadioGroup>

        <Button
            android:id="@+id/btnUniStressi"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/round_buttons_secondary"
            android:text="Tallenna"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>
</RelativeLayout>